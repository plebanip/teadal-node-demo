apiVersion: apps/v1
kind: Deployment
metadata:
  name: thanos-sidecar
  namespace: istio-system
  labels:
    app.kubernetes.io/name: thanos-sidecar
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: thanos-sidecar
  template:
    metadata:
      annotations:
        sidecar.istio.io/rewriteAppHTTPProbers: "true"
      labels:
        app.kubernetes.io/name: thanos-sidecar
    spec:
      containers:
      - name: thanos-sidecar
        image: thanosio/thanos:v0.32.2
        args:
        - sidecar
        - --tsdb.path=/prometheus
        - --prometheus.url=http://10.152.183.187:9090
        - --objstore.config-file=/etc/thanos/thanos-config.yaml
        volumeMounts:
        - name: thanos-config-volume
          mountPath: /etc/thanos
          readOnly: true
      volumes:
      - name: thanos-config-volume
        configMap:
          name: thanos-config
