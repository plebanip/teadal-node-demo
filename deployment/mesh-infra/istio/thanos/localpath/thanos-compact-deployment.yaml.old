apiVersion: apps/v1
kind: Deployment
metadata:
  name: thanos-compact
  namespace: istio-system
  labels:
    app.kubernetes.io/name: thanos-compact
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: thanos-compact
  template:
    metadata:
      annotations:
        sidecar.istio.io/rewriteAppHTTPProbers: "true"
      labels:
        app.kubernetes.io/name: thanos-compact
    spec:
      containers:
      - name: thanos-compact
        image: thanosio/thanos:v0.32.2
        args:
        - compact
        - --objstore.config-file=/etc/thanos/thanos-config.yaml
        - --wait
        - --data-dir=/data
        volumeMounts:
        - name: thanos-config-volume
          mountPath: /etc/thanos
          readOnly: true
        - name: data
          mountPath: /data # Monta il volume temporaneo nella directory /data
      volumes:
      - name: thanos-config-volume
        configMap:
          name: thanos-config
      - name: data
        emptyDir: {} # Volume temporaneo per la directory /data
